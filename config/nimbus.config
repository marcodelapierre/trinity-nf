workDir = '/data/work/temp/nxf_work'
process.cache = 'lenient'

params.copyinput = false

params.localdisk = false
params.localdir = '/tmp/nextflow_trinity_nf_\$(whoami)_\$\$'

params.overlay = false
params.overlay_size_mb = '200'
params.overtaskfile = 'overlay'

params.bf_totcpus = 1
params.bf_cpus = 1
params.bf_mem = '4GB'
params.bf_collate = params.bf_totcpus / params.bf_cpus * 1 as Integer

process.container = 'marcodelapierre/trinityrnaseq_gnupar:2.8.6_20191022'
docker {
  enabled = true
  runOptions = '-u $(id -u):$(id -g) -v /data/work:/data/work'
}

process {
  cpus = 1
  memory = '4GB'
}
